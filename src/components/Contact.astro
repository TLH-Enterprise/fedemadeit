<style>
	.contact-section {
		position: relative;
		background: var(--bg-card);
		border-top: 1px solid rgba(255, 255, 255, 0.06);
		padding: 0;
		overflow: hidden;
	}

	.contact-wrap {
		position: relative;
		max-width: 1200px;
		margin: 0 auto;
		min-height: 420px;
	}

	.contact-content {
		position: relative;
		z-index: 1;
		padding: 4rem 1.5rem 4rem 2.5rem;
		max-width: 55%;
	}

	.contact-block {
		margin-bottom: 2.5rem;
	}

	.contact-title {
		font-family: var(--font-display);
		font-size: 1.75rem;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		margin-bottom: 0.5rem;
		color: var(--text-primary);
	}

	.contact-text {
		color: var(--text-muted);
		margin-bottom: 1.5rem;
	}

	.contact-links {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.contact-btn {
		display: inline-flex;
		align-items: center;
		gap: 0.6rem;
		font-family: var(--font-body);
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		padding: 0.65rem 1.35rem;
		border-radius: 8px;
		border: none;
		color: white;
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.contact-icon {
		width: 22px;
		height: 22px;
		flex-shrink: 0;
	}

	.contact-btn-whatsapp {
		background: #25d366;
	}

	.contact-btn-whatsapp:hover {
		transform: scale(1.03);
		box-shadow: 0 0 20px rgba(37, 211, 102, 0.5);
	}

	.contact-btn-instagram {
		background: linear-gradient(135deg, #f58529, #dd2a7b, #8134af, #515bd4);
	}

	.contact-btn-instagram:hover {
		transform: scale(1.03);
		box-shadow: 0 0 20px rgba(221, 42, 123, 0.4);
	}

	.contact-btn-youtube {
		background: #ff0000;
	}

	.contact-btn-youtube:hover {
		transform: scale(1.03);
		box-shadow: 0 0 20px rgba(255, 0, 0, 0.5);
	}

	.contact-btn-mail {
		background: #4a90e2;
	}

	.contact-btn-mail:hover {
		transform: scale(1.03);
		box-shadow: 0 0 20px rgba(74, 144, 226, 0.5);
	}

	.programs-block {
		margin-bottom: 2.5rem;
	}

	.programs-title {
		font-family: var(--font-display);
		font-size: 1.35rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--text-primary);
		margin-bottom: 1.25rem;
	}

	.programs-category {
		margin-bottom: 1.25rem;
	}

	.programs-category:last-child {
		margin-bottom: 0;
	}

	.programs-category-title {
		font-family: var(--font-body);
		font-size: 0.95rem;
		font-weight: 500;
		color: var(--text-muted);
		margin-bottom: 0.6rem;
	}

	.programs-icons {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.program-icon {
		width: 52px;
		height: 52px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--program-color);
		color: white;
		font-family: var(--font-body);
		font-size: 0.9rem;
		font-weight: 700;
		border-radius: 8px;
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.program-icon:hover {
		transform: scale(1.05);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
	}

	.contact-diagonal {
		position: absolute;
		top: 0;
		right: 0;
		width: 55%;
		height: 100%;
		background: var(--bg-dark);
		clip-path: polygon(35% 0, 100% 0, 100% 100%, 0% 100%);
		z-index: 0;
	}

	@media (max-width: 768px) {
		.contact-content {
			max-width: 100%;
			padding: 3rem 1.5rem;
		}

		.contact-diagonal {
			display: none;
		}

		.contact-content {
			text-align: center;
		}

		.contact-links {
			justify-content: center;
		}

		.programs-block {
			text-align: left;
		}

		.programs-icons {
			justify-content: center;
		}
	}
</style>
