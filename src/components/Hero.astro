---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
	name: string;
	subtitle?: string;
	/** Imagen del hero: import desde src/assets/hero o URL (public). */
	image?: ImageMetadata | string;
}

const { name, subtitle = "Portafolio", image } = Astro.props;
---

<section class="hero">
	<div class="hero-bg"></div>
	<div class="hero-content">
		<div class="hero-text">
			<div class="hero-circle" aria-hidden="true"></div>
			<h1 class="hero-name">
				<span class="hero-name-first">{name.split(" ")[0]}</span>
				<span class="hero-name-sep">Ã—</span>
				<span class="hero-name-last">{name.split(" ").slice(1).join(" ")}</span>
			</h1>
			<p class="hero-subtitle">{subtitle}</p>
		</div>
		{image && (
			<div class="hero-image-wrap">
				<Image src={image as import("astro").ImageMetadata} alt={`${name}, portafolio`} class="hero-image" width={480} height={640} quality={95} loading="eager" decoding="async" />
			</div>
		)}
	</div>
	<div class="hero-edges" aria-hidden="true">
		<span class="edge edge-tl"></span>
		<span class="edge edge-r"></span>
		<span class="edge edge-b"></span>
	</div>
</section>

<style>
	.hero {
		position: relative;
		min-height: 85vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 6rem 1.5rem 4rem;
		overflow: hidden;
	}

	.hero-bg {
		position: absolute;
		inset: 0;
		background: var(--bg-dark);
		z-index: 0;
	}

	.hero-content {
		position: relative;
		z-index: 1;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: center;
		max-width: 1100px;
		width: 100%;
	}

	.hero-image-wrap {
		position: relative;
		transform: rotate(-2deg);
	}

	.hero-image {
		width: 100%;
		max-width: 420px;
		height: auto;
		border-radius: 8px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
		object-fit: cover;
	}

	.hero-text {
		position: relative;
	}

	.hero-circle {
		position: absolute;
		top: -2rem;
		right: 2rem;
		width: 140px;
		height: 140px;
		border: 3px solid var(--text-primary);
		border-radius: 50%;
		box-shadow: 0 0 40px var(--glow-white), inset 0 0 30px var(--glow-white);
		opacity: 0.9;
	}

	.hero-name {
		font-family: var(--font-display);
		font-size: clamp(2.5rem, 6vw, 4rem);
		line-height: 1.1;
		letter-spacing: 0.02em;
		text-transform: uppercase;
		margin-bottom: 0.5rem;
	}

	.hero-name-first {
		color: var(--accent-blue);
	}

	.hero-name-sep {
		display: inline-block;
		margin: 0 0.15em;
		color: var(--accent-yellow);
		font-size: 0.7em;
		vertical-align: middle;
	}

	.hero-name-last {
		color: var(--accent-yellow);
	}

	.hero-subtitle {
		font-size: 1.25rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		color: var(--accent-yellow);
		opacity: 0.95;
	}

	.hero-edges {
		pointer-events: none;
		position: absolute;
		inset: 0;
		z-index: 2;
	}

	.edge {
		position: absolute;
		background: linear-gradient(135deg, rgba(255,255,255,0.03) 0%, transparent 50%);
	}

	.edge-tl {
		top: 0;
		left: 0;
		width: 200px;
		height: 200px;
	}

	.edge-r {
		top: 0;
		right: 0;
		width: 120px;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255,255,255,0.02));
	}

	.edge-b {
		bottom: 0;
		left: 0;
		right: 0;
		height: 80px;
		background: linear-gradient(0deg, rgba(255,255,255,0.03), transparent);
	}

	@media (max-width: 768px) {
		.hero-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.hero-image-wrap {
			order: 1;
			transform: none;
			margin: 0 auto;
		}

		.hero-circle {
			right: 50%;
			transform: translateX(50%);
			width: 100px;
			height: 100px;
		}

		.hero-name {
			font-size: 2.25rem;
		}
	}
</style>
