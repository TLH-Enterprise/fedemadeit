---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Gallery from "../components/Gallery.astro";
import Contact from "../components/Contact.astro";
import { sessions, portfolioItems } from "../data/portfolio";

// Imagen del hero: usa FedeFotoPortada.jpeg en src/assets/hero/
const heroModules = import.meta.glob<{ default: import("astro").ImageMetadata }>("../assets/hero/*.{jpeg,jpg}", { eager: true });
const heroImage = heroModules["../assets/hero/FedeFotoPortada.jpeg"]?.default ?? Object.values(heroModules)[0]?.default;
---

<Layout title="Fede Made It | Portafolio de trabajo" description="Portafolio de Federico Rios - Videografía y fotografía">
	<Navbar sessions={sessions} />
	<main>
		<Hero name="Federico Ríos" subtitle="Portafolio" image={heroImage} />
		<Gallery items={portfolioItems} sessions={sessions} />
		<Contact />
	</main>
</Layout>
